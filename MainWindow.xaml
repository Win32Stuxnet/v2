<Window x:Class="NetworkScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NetworkScanner"
        Title="⚡ NetScanner v2" Height="700" Width="1000" MinHeight="500" MinWidth="800"
        Background="#0a0e14" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisConverter"/>
        <Style x:Key="CyanButton" TargetType="Button">
            <Setter Property="Background" Value="#00d4ff"/>
            <Setter Property="Foreground" Value="#0a0e14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00a8cc"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#151a22"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="CaretBrush" Value="#00d4ff"/>
            <Setter Property="BorderBrush" Value="#2a3040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⚡ NETSCANNER" FontSize="28" FontWeight="Bold" Foreground="#00d4ff" FontFamily="Consolas"/>
            <TextBlock Text="High-Performance Network Discovery" Foreground="#606878" FontSize="12"/>
        </StackPanel>

        <!-- Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TargetInput" Grid.Column="0" Style="{StaticResource DarkTextBox}" 
                     Text="192.168.1.1" Margin="0,0,12,0"/>
            
            <TextBox x:Name="PortsInput" Grid.Column="1" Style="{StaticResource DarkTextBox}" 
                     Text="22,80,443,3389,8080" Width="200" Margin="0,0,12,0"/>

            <Button x:Name="ScanButton" Grid.Column="2" Content="▶ SCAN" Style="{StaticResource CyanButton}"
                    Click="ScanButton_Click" Margin="0,0,8,0"/>
            
            <Button x:Name="StopButton" Grid.Column="3" Content="⏹ STOP" Click="StopButton_Click"
                    Background="#ef4444" Foreground="White" FontWeight="Bold" Padding="16,10"
                    BorderThickness="0" IsEnabled="False">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- Progress -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Progress Bar -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <Grid>
                    <ProgressBar x:Name="ProgressBar" Height="8" Background="#151a22" Foreground="#00d4ff" Maximum="100"/>
                </Grid>
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="#606878" FontFamily="Consolas" FontSize="12" Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Results -->
            <Border Grid.Row="1" Background="#0d1117" CornerRadius="8" BorderBrush="#1e2530" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Host List -->
                    <ListBox x:Name="ResultsList" Grid.Column="0" Background="Transparent" BorderThickness="0"
                             Foreground="#e0e0e0" FontFamily="Consolas" FontSize="12"
                             SelectionChanged="ResultsList_SelectionChanged" Margin="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="8" Height="8" 
                                             Fill="{Binding IsOnline, Converter={StaticResource BoolToColorConverter}}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Host}" Foreground="#e0e0e0"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Latency, StringFormat={}{0}ms}" Foreground="#606878"/>
                                    <TextBlock Grid.Column="3" Text="{Binding OpenPorts.Count, StringFormat={}{0} ports}" Foreground="#00d4ff"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Port Details -->
                    <Border Grid.Column="1" Background="#0a0e14" CornerRadius="0,8,8,0" Padding="12">
                        <StackPanel>
                            <TextBlock Text="OPEN PORTS" Foreground="#606878" FontSize="10" FontWeight="Bold" Margin="0,0,0,12"/>
                            <ItemsControl x:Name="PortsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#151a22" CornerRadius="4" Padding="10" Margin="0,0,0,6">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Port}" FontSize="16" FontWeight="Bold" Foreground="#22c55e"/>
                                                    <TextBlock Text="{Binding Service}" Foreground="#606878" FontSize="12" Margin="8,3,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Banner}" Foreground="#404858" FontSize="10" 
                                                           TextTrimming="CharacterEllipsis" MaxWidth="260"
                                                           Visibility="{Binding Banner, Converter={StaticResource StringToVisConverter}}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <TextBlock x:Name="SummaryText" Foreground="#606878" FontFamily="Consolas" FontSize="11"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Export JSON" Click="ExportJson_Click" Background="Transparent" Foreground="#00d4ff" 
                        BorderThickness="0" Cursor="Hand" Padding="8,4" FontSize="11"/>
                <Button Content="Export CSV" Click="ExportCsv_Click" Background="Transparent" Foreground="#00d4ff"
                        BorderThickness="0" Cursor="Hand" Padding="8,4" FontSize="11"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

